<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ILLIYEEN</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="~/css/site.css" rel="stylesheet" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
            <div class="container">
                <a class="navbar-brand fw-bold text-gold" href="@Url.Action("Index", "Home")">
                    <i class="fas fa-gem me-2"></i>ILLIYEEN
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "Home")">Home</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                Products
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="@Url.Action("Index", "Product")">All Products</a></li>
                                <li><a class="dropdown-item" href="@Url.Action("Category", "Product", new { slug = "mens-fashion" })">Men's Fashion</a></li>
                                <li><a class="dropdown-item" href="@Url.Action("Category", "Product", new { slug = "womens-fashion" })">Women's Fashion</a></li>
                                <li><a class="dropdown-item" href="@Url.Action("Category", "Product", new { slug = "accessories" })">Accessories</a></li>
                                <li><a class="dropdown-item" href="@Url.Action("Category", "Product", new { slug = "watches" })">Watches</a></li>
                                <li><a class="dropdown-item" href="@Url.Action("Category", "Product", new { slug = "home-lifestyle" })">Home & Lifestyle</a></li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("About", "Home")">About</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Contact", "Home")">Contact</a>
                        </li>
                    </ul>
                    <div class="d-flex align-items-center">
                        <form class="d-flex me-3" method="get" action="@Url.Action("Search", "Product")">
                            <input class="form-control form-control-sm" type="search" name="q" placeholder="Search products..." style="width: 200px;">
                            <button class="btn btn-outline-gold btn-sm ms-1" type="submit">
                                <i class="fas fa-search"></i>
                            </button>
                        </form>
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <a href="@Url.Action("Index", "Cart")" class="btn btn-outline-gold me-2 position-relative">
                                <i class="fas fa-shopping-cart"></i>
                                <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-gold text-dark" id="cart-count">
                                    0
                                </span>
                            </a>
                            <div class="dropdown">
                                <a class="btn btn-outline-gold dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                    <i class="fas fa-user me-1"></i>@User.Identity.Name
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" href="#">Profile</a></li>
                                    <li><a class="dropdown-item" href="#">Orders</a></li>
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <li><hr class="dropdown-divider"></li>
                                        <li><a class="dropdown-item" href="@Url.Action("Dashboard", "Admin")">Admin Panel</a></li>
                                    }
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <form method="post" action="@Url.Action("Logout", "Account")">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="dropdown-item">Logout</button>
                                        </form>
                                    </li>
                                </ul>
                            </div>
                        }
                        else
                        {
                            <a href="@Url.Action("Login", "Account")" class="btn btn-outline-gold me-2">Login</a>
                            <a href="@Url.Action("Register", "Account")" class="btn btn-gold">Register</a>
                        }
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <main class="flex-grow-1" style="margin-top: 76px;">
        @RenderBody()
    </main>

    <footer class="bg-dark text-gold py-5 mt-5">
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <h5 class="fw-bold mb-3">
                        <i class="fas fa-gem me-2"></i>ILLIYEEN
                    </h5>
                    <p class="text-light">Premium Bengali fashion and lifestyle products with traditional craftsmanship and contemporary luxury.</p>
                    <div class="social-links">
                        <a href="#" class="text-gold me-3"><i class="fab fa-facebook-f"></i></a>
                        <a href="#" class="text-gold me-3"><i class="fab fa-instagram"></i></a>
                        <a href="#" class="text-gold me-3"><i class="fab fa-twitter"></i></a>
                        <a href="#" class="text-gold"><i class="fab fa-youtube"></i></a>
                    </div>
                </div>
                <div class="col-md-2">
                    <h6 class="fw-bold mb-3">Categories</h6>
                    <ul class="list-unstyled">
                        <li><a href="@Url.Action("Category", "Product", new { slug = "mens-fashion" })" class="text-light text-decoration-none">Men's Fashion</a></li>
                        <li><a href="@Url.Action("Category", "Product", new { slug = "womens-fashion" })" class="text-light text-decoration-none">Women's Fashion</a></li>
                        <li><a href="@Url.Action("Category", "Product", new { slug = "accessories" })" class="text-light text-decoration-none">Accessories</a></li>
                        <li><a href="@Url.Action("Category", "Product", new { slug = "watches" })" class="text-light text-decoration-none">Watches</a></li>
                    </ul>
                </div>
                <div class="col-md-2">
                    <h6 class="fw-bold mb-3">Quick Links</h6>
                    <ul class="list-unstyled">
                        <li><a href="@Url.Action("About", "Home")" class="text-light text-decoration-none">About Us</a></li>
                        <li><a href="@Url.Action("Contact", "Home")" class="text-light text-decoration-none">Contact</a></li>
                        <li><a href="@Url.Action("Privacy", "Home")" class="text-light text-decoration-none">Privacy Policy</a></li>
                        <li><a href="#" class="text-light text-decoration-none">Terms of Service</a></li>
                    </ul>
                </div>
                <div class="col-md-4">
                    <h6 class="fw-bold mb-3">Contact Info</h6>
                    <p class="text-light mb-2">
                        <i class="fas fa-map-marker-alt me-2"></i>
                        Dhaka, Bangladesh
                    </p>
                    <p class="text-light mb-2">
                        <i class="fas fa-phone me-2"></i>
                        +880 1700-000000
                    </p>
                    <p class="text-light mb-2">
                        <i class="fas fa-envelope me-2"></i>
                        info@illiyeen.com
                    </p>
                </div>
            </div>
            <hr class="my-4" style="border-color: #d4af37;">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <p class="text-light mb-0">&copy; 2025 ILLIYEEN. All rights reserved.</p>
                </div>
                <div class="col-md-6 text-end">
                    <p class="text-light mb-0">The High-End Retailer of Premium Bengali Fashion</p>
                </div>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
