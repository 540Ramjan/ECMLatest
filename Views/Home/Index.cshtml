@{
    ViewData["Title"] = "Home";
    var featuredProducts = ViewBag.FeaturedProducts as IEnumerable<Illiyeen.Models.Product>;
    var categories = ViewBag.Categories as IEnumerable<Illiyeen.Models.Category>;
}

<!-- Hero Section -->
<section class="hero-section bg-gradient text-white py-5">
    <div class="container">
        <div class="row align-items-center min-vh-75">
            <div class="col-lg-6">
                <h1 class="display-4 fw-bold mb-4">
                    Premium <span class="text-gold">Bengali Fashion</span>
                </h1>
                <p class="lead mb-4">
                    Discover authentic Bengali craftsmanship with contemporary luxury. 
                    Experience the finest collection of traditional and modern fashion.
                </p>
                <div class="d-flex gap-3">
                    <a href="@Url.Action("Index", "Product")" class="btn btn-gold btn-lg">
                        <i class="fas fa-shopping-bag me-2"></i>Shop Now
                    </a>
                    <a href="@Url.Action("About", "Home")" class="btn btn-outline-light btn-lg">
                        Learn More
                    </a>
                </div>
            </div>
            <div class="col-lg-6 text-center">
                <div class="hero-image">
                    <i class="fas fa-gem display-1 text-gold opacity-75"></i>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Categories Section -->
<section class="py-5">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="fw-bold mb-3">Shop by Category</h2>
            <p class="text-muted">Explore our curated collections of premium Bengali fashion</p>
        </div>
        <div class="row g-4">
            @if (categories != null)
            {
                @foreach (var category in categories)
                {
                    <div class="col-lg-4 col-md-6">
                        <div class="category-card card border-0 shadow-sm h-100">
                            <div class="card-body text-center p-4">
                                <div class="category-icon mb-3">
                                    <i class="fas fa-@(GetCategoryIcon(category.Slug)) fa-3x text-gold"></i>
                                </div>
                                <h5 class="card-title fw-bold">@category.Name</h5>
                                <p class="card-text text-muted">@category.Description</p>
                                <a href="@Url.Action("Category", "Product", new { slug = category.Slug })" 
                                   class="btn btn-outline-gold">
                                    Explore Collection
                                </a>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</section>

<!-- Featured Products Section -->
<section class="py-5 bg-light">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="fw-bold mb-3">Featured Products</h2>
            <p class="text-muted">Handpicked premium items from our exclusive collection</p>
        </div>
        <div class="row g-4">
            @if (featuredProducts != null)
            {
                @foreach (var product in featuredProducts)
                {
                    <div class="col-lg-3 col-md-6">
                        <div class="product-card card border-0 shadow-sm h-100">
                            <div class="product-image">
                                <img src="@(product.ImageUrl ?? "https://via.placeholder.com/300x300/d4af37/000000?text=" + Uri.EscapeDataString(product.Name))" 
                                     class="card-img-top" alt="@product.Name" style="height: 250px; object-fit: cover;">
                                <div class="product-overlay">
                                    <a href="@Url.Action("Details", "Product", new { id = product.Id })" 
                                       class="btn btn-gold btn-sm">
                                        <i class="fas fa-eye me-1"></i>View Details
                                    </a>
                                </div>
                            </div>
                            <div class="card-body">
                                <h6 class="card-title fw-bold">@product.Name</h6>
                                <p class="text-muted small">@product.Category.Name</p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <span class="h5 text-gold fw-bold mb-0">৳@product.Price.ToString("N0")</span>
                                    @if (product.ReviewCount > 0)
                                    {
                                        <div class="rating">
                                            @for (int i = 1; i <= 5; i++)
                                            {
                                                <i class="fas fa-star @(i <= product.AverageRating ? "text-warning" : "text-muted")"></i>
                                            }
                                            <span class="text-muted ms-1">(@product.ReviewCount)</span>
                                        </div>
                                    }
                                </div>
                                @if (User.Identity?.IsAuthenticated == true)
                                {
                                    <button class="btn btn-outline-gold btn-sm mt-2 w-100 add-to-cart-btn" 
                                            data-product-id="@product.Id">
                                        <i class="fas fa-shopping-cart me-1"></i>Add to Cart
                                    </button>
                                }
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
        <div class="text-center mt-4">
            <a href="@Url.Action("Index", "Product")" class="btn btn-gold">
                View All Products
            </a>
        </div>
    </div>
</section>

<!-- Features Section -->
<section class="py-5">
    <div class="container">
        <div class="row g-4">
            <div class="col-lg-3 col-md-6 text-center">
                <div class="feature-item">
                    <div class="feature-icon mb-3">
                        <i class="fas fa-shipping-fast fa-3x text-gold"></i>
                    </div>
                    <h5 class="fw-bold">Free Shipping</h5>
                    <p class="text-muted">Free delivery on orders over ৳5,000</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 text-center">
                <div class="feature-item">
                    <div class="feature-icon mb-3">
                        <i class="fas fa-undo-alt fa-3x text-gold"></i>
                    </div>
                    <h5 class="fw-bold">Easy Returns</h5>
                    <p class="text-muted">30-day hassle-free return policy</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 text-center">
                <div class="feature-item">
                    <div class="feature-icon mb-3">
                        <i class="fas fa-shield-alt fa-3x text-gold"></i>
                    </div>
                    <h5 class="fw-bold">Secure Payment</h5>
                    <p class="text-muted">bKash, Nagad & secure payment options</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 text-center">
                <div class="feature-item">
                    <div class="feature-icon mb-3">
                        <i class="fas fa-headset fa-3x text-gold"></i>
                    </div>
                    <h5 class="fw-bold">24/7 Support</h5>
                    <p class="text-muted">Round-the-clock customer service</p>
                </div>
            </div>
        </div>
    </div>
</section>

@functions {
    private string GetCategoryIcon(string slug)
    {
        return slug switch
        {
            "mens-fashion" => "male",
            "womens-fashion" => "female",
            "accessories" => "handbag",
            "watches" => "clock",
            "home-lifestyle" => "home",
            _ => "tag"
        };
    }
}

@section Scripts {
    <script src="~/js/cart.js"></script>
}
